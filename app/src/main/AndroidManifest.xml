<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yaari">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Yaari"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".feature.auth.NormalRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".feature.auth.NormalSignInActivity"
            android:exported="false" />
        <activity android:name=".feature.search.SearchActivity" />
        <activity android:name=".feature.fullimage.FullImageActivity" />
        <activity android:name=".feature.postupload.PostUploadActivity" />
        <activity android:name=".feature.homepage.profile.ProfileActivity" />
        <activity android:name=".feature.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.homepage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>